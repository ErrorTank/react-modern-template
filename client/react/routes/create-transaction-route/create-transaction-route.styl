.create-transaction-route{
  .loading-overflow{
    z-index 10
    color black
    background-color rgba(white, 0.6)
    position absolute
    width 100%
    height 100%
    top 0
    left 0
  }
  .signature{
    font-size 14px
    color #1a1a1a
    word-wrap break-word
  }
  .sign-btn{
    font-size 15px
  }
  .create-form{
    width 500px
    margin auto
    margin-top 100px
    color #1a1a1a
    .submit-btn{
      margin-top 20px !important
      background-color #1a1a1a
      color white
      font-size 16px
      font-weight 550
      padding 8px

    }
    .form-section{
      margin-bottom 15px !important
      label{
        color tikiblue
        font-weight 550
      }
      input{
        border 1px solid #1a1a1a
        border-radius 3px
        font-size 16px
      }
    }
  }
}
